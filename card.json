{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Image",
                            "style": "Person",
                            "url": "https://cdn4.iconfinder.com/data/icons/computer-technology-6/64/Error-computer-notice-warning-512.png",
                            "size": "Medium",
                            "height": "50px"
                        }
                    ],
                    "width": "auto"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Container",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "Update for Employee",
                                    "color": "Light",
                                    "size": "ExtraLarge",
                                    "spacing": "Padding",
                                    "horizontalAlignment": "Left"
                                }
                            ]
                        }
                    ],
                    "width": "auto",
                    "verticalContentAlignment": "Center"
                }
            ],
            "spacing": "Medium",
            "horizontalAlignment": "Left",
            "style": "emphasis"
        },
        {
            "type": "Container",
            "style": "attention",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "PLEASE READ: Please make sure to update you device",
                    "wrap": true,
                    "horizontalAlignment": "Center",
                    "weight": "Bolder",
                    "size": "Medium",
                    "color": "Warning"
                }
            ],
            "horizontalAlignment": "Center",
            "spacing": "Small"
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "By acknowledging the read we will update your record.",
                    "wrap": true,
                    "horizontalAlignment": "Center",
                    "size": "Medium",
                    "color": "Good",
                    "weight": "Bolder"
                }
            ],
            "style": "good",
            "horizontalAlignment": "Left",
            "spacing": "None"
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "RichTextBlock",
                    "inlines": [
                        {
                            "type": "TextRun",
                            "text": "NOTE - ",
                            "color": "Warning",
                            "weight": "Bolder"
                        },
                        {
                            "type": "TextRun",
                            "text": "Please submit your response from the options below.",
                            "color": "Accent",
                            "weight": "Bolder"
                        }
                    ]
                }
            ],
            "spacing": "Small",
            "horizontalAlignment": "Left"
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "Container",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Accept or Decline"
                        },
                        {
                            "type": "Input.ChoiceSet",
                            "placeholder": "Please choose...",
                            "choices": [
                                {
                                    "title": "Accept",
                                    "value": "accept"
                                },
                                {
                                    "title": "Decline",
                                    "value": "decline"
                                }
                            ],
                            "id": "selection"
                        },
                        {
                            "type": "Container",
                            "items": [
                                {
                                    "type": "Container",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "Comments",
                                            "color": "Light"
                                        },
                                        {
                                            "type": "Input.Text",
                                            "placeholder": "Comments...",
                                            "id": "comment"
                                        }
                                    ],
                                    "style": "emphasis"
                                }
                            ]
                        }
                    ],
                    "horizontalAlignment": "Left",
                    "style": "default"
                }
            ]
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "ActionSet",
                    "actions": [
                        {
                            "type": "Action.Submit",
                            "title": "Submit"
                        }
                    ],
                    "horizontalAlignment": "Left",
                    "spacing": "None"
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.2"
}
